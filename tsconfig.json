{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
  },
  "paths": {
    "@/*": [
      "./*"
    ],
  },
  "include": [
    "src",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ],
  "types":["chrome"]
}
